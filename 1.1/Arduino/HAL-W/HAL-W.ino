////////////////////////////////////////////////////////////////////// 
//   SETUP ROUTINE                                                                                 
//////////////////////////////////////////////////////////////////////                            
void setup(void)
{
  
    //*********************************
    // SERIAL INTERFACE INITIALIZATION
    //*********************************
    Serial.begin(9600);                                           // Start serial library
    Serial.println("H-ome");
    Serial.println("A-rduino");
    Serial.println("L-ogistics");
    Serial.println("");
    //*********************************
    // NEARBUS INITIALIZATION
    //*********************************   
    Agent.NearInit( deviceId, sharedSecret );

    //*********************************
    // WIFI INITIALIZATION
    //*********************************     
    Serial.println("Connecting to WiFi network...");   
 
    if( wifiMode == 0 ) 
        status = WiFi.begin(ssid, pass);
    if( wifiMode == 1 )    
        status = WiFi.begin(ssid, pass);
    else
        status = WiFi.begin(ssid, keyIndex, pass);
        
    while ( status != WL_CONNECTED) {
        status = WiFi.begin(ssid, pass);
        delay(5000);
    }
    Serial.println("Connected to WiFi");
    Serial.print( "SSID: " );
    Serial.println( WiFi.SSID() );

    // print your WiFi shield's IP address:
    Serial.print( "IP Address: ");
    Serial.println( WiFi.localIP() );

    //*********************************
    // FLEXITIMER INITIALIZATION
    //*********************************
    FlexiTimer2::set( 10, AuxPortServices );                      // Call the port services routine every 10 ms
    FlexiTimer2::start();
    
    pinMode(3, OUTPUT);   
}


void loop()
{
int ret; 
    
    Agent.NearChannel( A_register, B_register, &ret );

    if ( ret >= 50 )
    {
        Serial.println( "Rx Error" ); 
        // [50]  Frame Autentication Mismatch
        // [51]  Frame Out of sequence
        // [52]  Remote ACK Error
        // [53]  Unsupported Command    
    }
}

